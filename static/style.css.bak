  font-size: 2.4em;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 15%;
  margin-left: -120px;
  -webkit-animation: horror-animation 5s infinite;
  -moz-animation: horror-animation 5s infinite;
  -o-animation: horror-animation 5s infinite;
  animation: horror-animation 5s infinite;
}
h1 > span {
